@model MeterWeb.Meter

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання лічильника до квартири @ViewBag.FlatAddress</h1>

<h4>Meter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeterNumbers" class="control-label"></label>
                <input asp-for="MeterNumbers" class="form-control" />
                <span asp-validation-for="MeterNumbers" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="MeterTypeId" class="control-label"></label>
            <select asp-for="MeterTypeId" class="form-control" asp-items="ViewBag.MeterTypeId"></select>
            </div> 
            <div class="form-group">
                <label asp-for="MeterDataLastReplacement" class="control-label"></label>
                <input asp-for="MeterDataLastReplacement" class="form-control" />
                <span asp-validation-for="MeterDataLastReplacement" class="text-danger"></span>
            </div>

            <input type="hidden" value="@ViewBag.MeterFlatId" name="FlatId" />
            <input type="hidden" value="@ViewBag.MeterTypeId" name="MeterTypeId" />


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
