@model IEnumerable<MeterWeb.Models.User>
@{ ViewBag.Title = "Список користувачів"; }

<a asp-action="Create">Додати користувача</a>

<table class="table">
    <tr><th>Email</th>><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.Email</td>
  
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@user.Id">Змінити</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Видалити
            </button>
        </form>
    </td>
</tr>}
</table>
