@model IEnumerable<MeterWeb.Tariff>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TariffPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TariffPrivilege)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TariffService)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TariffPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TariffPrivilege)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TariffService.ServiceName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TariffId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TariffId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TariffId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
