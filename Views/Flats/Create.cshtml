@model MeterWeb.Flat

@{
    ViewData["Title"] = "Додати адресу";
}

<h1>Додати адресу</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlatAddress" class="control-label"></label>
                <input asp-for="FlatAddress" class="form-control" />
                <span asp-validation-for="FlatAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-outline-success" />
                <input type="hidden" name="returnController" value="@ViewBag.ReturnController" />
                <input type="hidden" name="returnAction" value="@ViewBag.ReturnAction" />
            </div>
        </form>
    </div>  
</div>

<div>
    <a asp-action="Index" asp-controller="Home">На головну</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
