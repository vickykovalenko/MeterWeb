@model IEnumerable<MeterWeb.Reading>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReadingDataOfCurrentReading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadingMeter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadingPayment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReadingDataOfCurrentReading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadingMeter.MeterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadingPayment.PaymentId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReadingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReadingId">Details</a> |
